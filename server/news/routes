import { Router } from "express";
import { storage } from "../storage";

const router = Router();

router.get("/", async (req, res) => {
  try {
    const posts = await storage.getNewsPosts(req.query.category as string | undefined);
    res.json(posts);
  } catch {
    res.status(500).json({ message: "Error retrieving news posts" });
  }
});

router.get("/:id", async (req, res) => {
  const { id } = req.params;
  try {
    const post = await storage.getNewsPost(Number(id));
    if (!post) return res.status(404).json({ message: "News post not found" });
    res.json(post);
  } catch {
    res.status(500).json({ message: "Error retrieving news post" });
  }
});

export default router;
